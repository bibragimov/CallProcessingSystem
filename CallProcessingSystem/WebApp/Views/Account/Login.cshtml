@model WebApp.Models.LoginViewModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
{
    <h2 class="form-signin-heading">Авторизуйтесь</h2>

    @Html.LabelFor(u => u.Email, new { @class = "sr-only" })
    @Html.TextBoxFor(u => u.Email, new { type = "email", id = "Email", @class = "form-control", placeholder = "Email", required = "", autofocus = "" })

    @Html.LabelFor(u => u.Password, new { @class = "sr-only" })
    @Html.TextBoxFor(u => u.Password, new { type = "password", id = "Password", @class = "form-control", placeholder = "Пароль", required = "" })


    <div class="checkbox">
        @Html.CheckBoxFor(u => u.RememberMe)
        @Html.LabelFor(u => u.RememberMe)
    </div>
    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Войти" />
}